{% comment %}
  Image Section
  Allows merchants to upload an image with optional heading and text
{% endcomment %}

<section class="custom-image-section" style="text-align:center; padding:40px 0;">
  <div class="page-width">
    {% if section.settings.image != blank %}
      <img 
        src="{{ section.settings.image | image_url: width: section.settings.image.width, height: section.settings.image.height }}" 
        alt="{{ section.settings.image.alt | escape }}" 
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
        style="max-width:100%; height:auto; border-radius:12px;" />
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 style="margin-top:20px;">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.text != blank %}
      <p style="margin-top:10px;">{{ section.settings.text }}</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Image Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Upload Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Add a description under the image."
    }
  ],
  "presets": [
    {
      "name": "Image Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
